<table class= "comment">
  <tr>
     <% book.book_comments.each do |book_comment| %>
      <td><%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
          <%= link_to book_comment.user.name %></td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
      <td><%= link_to "Dstroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %></td>
      <% end %>
     <% end %>
  </tr>
</table>
  <div>
   <%= form_with model: [book, book_comment], url: book_book_comments_path(book) do |f| %>
    <%= f.text_area :comment, rows: "5", placeholder: "コメントをここに", class: "w-100" %>
    <%= f.submit "送信" %>
   <% end %>
  </div>